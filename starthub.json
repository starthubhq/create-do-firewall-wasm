{
  "name": "create-do-firewall-wasm",
  "version": "0.0.4",
  "ref": "ghcr.io/starthubhq/create-do-droplet-docker:0.0.3",
  "inputs": [
    {
      "name": "do_access_token",
      "description": "DigitalOcean access token",
      "type": "string"
    },
    {
      "name": "project_id",
      "description": "ID of the project",
      "type": "string"
    },
    {
      "name": "droplet_name",
      "description": "Name of the droplet to create",
      "type": "string"
    },
    {
      "name": "region",
      "description": "Region slug (default: fra1)",
      "type": "string",
      "default": "fra1"
    },
    {
      "name": "size",
      "description": "Droplet size slug (default: s-1vcpu-1gb)",
      "type": "string",
      "default": "s-1vcpu-1gb"
    },
    {
      "name": "image",
      "description": "Image slug or ID (default: ubuntu-22-04-x64)",
      "type": "string",
      "default": "ubuntu-22-04-x64"
    },
    {
      "name": "ssh_keys",
      "description": "Array of SSH key IDs or fingerprints",
      "type": "array",
      "items": { "type": "string" }
    },
    {
      "name": "tags",
      "description": "Array of tags to assign",
      "type": "array",
      "items": { "type": "string" },
      "default": ["starthub"]
    },
    {
      "name": "backups",
      "description": "Enable backups",
      "type": "boolean",
      "default": false
    },
    {
      "name": "ipv6",
      "description": "Enable IPv6",
      "type": "boolean",
      "default": true
    },
    {
      "name": "monitoring",
      "description": "Enable monitoring",
      "type": "boolean",
      "default": true
    },
    {
      "name": "vpc_uuid",
      "description": "Optional VPC UUID to attach droplet",
      "type": "string"
    },
    {
      "name": "user_data",
      "description": "Optional cloud-init user data script",
      "type": "string"
    }
  ],
  "outputs": [
    {
      "name": "droplet_id",
      "description": "ID of the created droplet",
      "type": "string"
    },
    {
      "name": "droplet_name",
      "description": "Name of the created droplet",
      "type": "string"
    },
    {
      "name": "region",
      "description": "Region slug of the created droplet",
      "type": "string"
    },
    {
      "name": "size",
      "description": "Size slug of the created droplet",
      "type": "string"
    },
    {
      "name": "image",
      "description": "Image slug or ID used for the droplet",
      "type": "string"
    }
  ]
}
